<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.youlai.boot.deviceJob.mapper.DeviceJobMapper">

    <!-- 获取任务管理分页列表 -->
    <select id="getDeviceJobPage" resultType="com.youlai.boot.deviceJob.model.vo.DeviceJobVO">
        SELECT
        id,
        job_name,
        device_id,
        device_name,
        job_type,
        cron,
        is_advance,
        status,
        remark
        FROM
        device_job
        <where>
            <if test="queryParams.typeId != null">
                AND job_type = #{queryParams.typeId}
            </if>
            <if test="queryParams.status != null">
                AND status = #{queryParams.status}
            </if>
        </where>
        ORDER BY
        CASE WHEN status = 1 THEN 0 ELSE 1 END,
        update_time DESC
    </select>

</mapper>
