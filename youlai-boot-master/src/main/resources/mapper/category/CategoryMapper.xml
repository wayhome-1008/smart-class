<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.youlai.boot.category.mapper.CategoryMapper">

    <!-- 获取分类管理分页列表 -->
    <select id="getCategoryPage" resultType="com.youlai.boot.category.model.vo.CategoryVO">
        SELECT
                id,
                category_name,
                icon,
                status,
                remark
        FROM
            category
        <where>
            <if test="queryParams.categoryName != null and queryParams.categoryName != ''">
                AND category_name LIKE CONCAT('%', #{queryParams.categoryName}, '%')
            </if>
        </where>
    </select>

</mapper>
