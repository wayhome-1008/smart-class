<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.youlai.boot.building.mapper.BuildingMapper">

    <!-- 获取教学楼管理分页列表 -->
    <select id="getBuildingPage" resultType="com.youlai.boot.building.model.vo.BuildingVO">
        SELECT
                id,
                building_code,
                building_name,
                status,
                remark
        FROM
            building
        <where>
            <if test="queryParams.buildingCode != null and queryParams.buildingCode != ''">
                AND building_code LIKE CONCAT('%', #{queryParams.buildingCode}, '%')
            </if>
            <if test="queryParams.buildingName != null and queryParams.buildingName != ''">
                AND building_name LIKE CONCAT('%', #{queryParams.buildingName}, '%')
            </if>
            <if test="queryParams.status != null">
                AND status = #{queryParams.status}
            </if>
        </where>
    </select>

</mapper>
